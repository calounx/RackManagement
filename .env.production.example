# HomeRack Production Environment Configuration
# Copy this file to .env.production and update with your production values

# ============================================================================
# IMPORTANT: Change all default passwords and secrets!
# ============================================================================

# PostgreSQL Database Password
POSTGRES_PASSWORD=CHANGE_THIS_TO_A_SECURE_PASSWORD

# Application Secrets
SECRET_KEY=CHANGE_THIS_TO_A_LONG_RANDOM_STRING
JWT_SECRET_KEY=CHANGE_THIS_TO_ANOTHER_LONG_RANDOM_STRING

# ============================================================================
# How to generate secure passwords and secrets:
# ============================================================================
# PostgreSQL password:
#   openssl rand -base64 32
#
# Secret keys (at least 32 characters):
#   openssl rand -hex 32
#
# Or use: https://www.random.org/passwords/
# ============================================================================

# Example values (DO NOT USE THESE IN PRODUCTION):
# POSTGRES_PASSWORD=xK9mP2nQ5wR8tY1uE4oI7aS3dF6gH0jL
# SECRET_KEY=3f8e2a9c1b7d4f6e5a8c2b9d1e4f7a3c5b8d2e9f1a4c7b3d6e9f2a5c8b1d4e7
# JWT_SECRET_KEY=9a2f5c8e1b4d7a3f6c9e2b5d8a1f4c7e0b3d6a9f2c5e8b1d4a7f3c6e9b2d5a8

# ============================================================================
# Database Configuration (Production - PostgreSQL)
# ============================================================================
DB_TYPE=postgresql
DATABASE_URL=postgresql://homerack_user:${POSTGRES_PASSWORD}@postgres:5432/homerack

# Connection Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true

# Connection Retry
DB_CONNECT_RETRY_MAX_ATTEMPTS=5
DB_CONNECT_RETRY_DELAY=2

# ============================================================================
# Application
# ============================================================================
APP_NAME="HomeRack API"
VERSION="1.0.1"
DEBUG=false
ENVIRONMENT=production

# ============================================================================
# CORS (Update with your production domain)
# ============================================================================
CORS_ORIGINS=["http://lampadas.local","http://lampadas.local:8080","https://yourdomain.com"]

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_REQUEST_BODY=false
LOG_RESPONSE_BODY=false

# ============================================================================
# NetBox Integration (Optional)
# ============================================================================
NETBOX_ENABLED=false
# NETBOX_URL=https://netbox.example.com
# NETBOX_TOKEN=your_netbox_token_here

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=300/hour
RATE_LIMIT_ANONYMOUS=100/hour
RATE_LIMIT_THERMAL_ANALYSIS=10/minute
RATE_LIMIT_BULK_OPERATIONS=5/minute

# ============================================================================
# Circuit Breaker
# ============================================================================
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=30
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60
